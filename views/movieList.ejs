<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/header.ejs') %>
    
    <div class="list">
        <h2>All Movies</h2>

        <% if (movies.length > 0) { %>
            <% movies.forEach(movie => { %>

                <h3><%= movie.title %></h3>
                <p><%= movie.description %></p>

            <% }) %>
        <% } else { %>
            <p>No Movies have been added...</p>
        <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>