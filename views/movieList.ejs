<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/header.ejs') %>
    
    <main>
        <div class="list">
            <h2>All Movies</h2>
    
            <% if (movies.length > 0) { %>
                <% movies.forEach(movie => { %>
    
                    <a class="list__single" href="/movieList/<%= movie._id %>">
                        <h3><%= movie.title %></h3>
                        <p><%= movie.description %></p>
                    </a>
    
                <% }) %>
            <% } else { %>
                <p>No Movies have been added...</p>
            <% } %>
        </div>
    </main>

    <%- include('./partials/footer.ejs') %>
</body>
</html>