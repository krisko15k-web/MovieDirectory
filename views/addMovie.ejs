<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/header.ejs') %>

    <div class="form">
        <form action="" method="POST">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" class="form__input" required>
            <label for="desc">Description:</label>
            <textarea id="desc" name="desc" class="form__input" required></textarea>
            <label for="director">Director:</label>
            <input type="text" id="director" name="director" class="form__input" required>
            <label for="Date-Aired">Date Aired:</label>
            <input type="date" id="Date-Aired" name="Date-Aired" class="form__input" required>
            <label for="genre">Genre:</label>
            <input type="text" id="genre" name="genre" class="form__input" required>
            <label for="duration">Duration:</label>
            <input type="text" id="duration" name="duration" class="form__input" required>
            <label for="score">Score (1-10):</label>
            <select id="score" name="score" class="form__input" required>
                <option disabled selected>Select Score</option>
                <option value="10">(10) Masterpiece</option>
                <option value="9">(9) Great</option>
                <option value="8">(8) Very Good</option>
                <option value="7">(7) Good</option>
                <option value="6">(6) Fine</option>
                <option value="5">(5) Average</option>
                <option value="4">(4) Bad</option>
                <option value="3">(3) Very Bad</option>
                <option value="2">(2) Horrible</option>
                <option value="1">(1) Appalling</option>
            </select>
            <label for="image">Cover Image:</label>
            <input type="file" id="image" name="image" class="form__file" required>
            <button class="form__submit">Add Movie</button>
        </form>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>